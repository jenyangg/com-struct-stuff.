module seven_seg (
    input char[4],
    output segs[8]
  ) {
 
  always {
    case (char) {
      0: segs = 8b0111111;
      1: segs = 8b0000110;
      2: segs = 8b1011011;
      3: segs = 8b1001111;
      4: segs = 8b1100110;
      5: segs = 8b1101101;
      6: segs = 8b1111101;
      7: segs = 8b0000111;
      8: segs = 8b1111111;
      9: segs = 8b1100111;
      default: segs = 8b10000000;
    }
  }
}